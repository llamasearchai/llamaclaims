# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=false
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=changeThisToASecureRandomString
ACCESS_TOKEN_EXPIRE_MINUTES=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Directories
DATA_DIR=./data
MODELS_DIR=./data/models
UPLOADS_DIR=./data/uploads
CACHE_DIR=./data/cache
LOGS_DIR=./logs

# MLX Optimization
ENABLE_MLX=true
DEFAULT_QUANTIZATION_BITS=16
BENCHMARK_ITERATIONS=10

# Model Endpoints (if using remote models instead of local)
# MODEL_API_URL=https://your-model-api.example.com
# MODEL_API_KEY=your-model-api-key

# Feature Flags
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_FRAUD_DETECTION=true
ENABLE_CLAIMS_ANALYSIS=true
ENABLE_POLICY_ANALYSIS=true

# Optional: Database Config (if using a database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=password
# DB_NAME=llamaclaims

# Optional: Redis Config (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Optional: S3 or compatible storage (if using cloud storage)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_REGION=us-east-1
# S3_BUCKET=llamaclaims
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key 